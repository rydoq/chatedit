<div class="standard-form chatedit edit-form-v2 scrollable">
  <h5>{{localize "CHATEDIT.EDITS.Speaker"}}</h5>
  <select name="speaker">{{selectOptions speakers localize=true}}</select>
  {{#if hasPolyglot}}
    <h5>{{localize "CHATEDIT.EDITS.Language"}}</h5>
    <select name="language">{{selectOptions languagesByToken localize=true}}</select>
  {{/if}}
  <h5>{{localize "CHATEDIT.EDITS.Alias"}}</h5>
  {{> 'modules/chatedit-new/templates/alias.hbs'}}
  <h5>{{localize "CHATEDIT.EDITS.Edited"}}</h5>
  {{> 'modules/chatedit-new/templates/bottom.hbs'}}
</div>